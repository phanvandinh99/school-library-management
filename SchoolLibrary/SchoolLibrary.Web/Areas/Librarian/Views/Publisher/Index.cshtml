@model IEnumerable<SchoolLibrary.Web.Models.Publisher>
@{
    ViewData["Title"] = "Quản lý Nhà xuất bản";
}

<h2 class="mb-4">Quản lý Nhà xuất bản</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Thêm nhà xuất bản mới
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Tên nhà xuất bản</th>
                <th>Địa chỉ</th>
                <th>Email</th>
                <th>Điện thoại</th>
                <th>Số sách</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var publisher in Model)
            {
                <tr>
                    <td>@publisher.PublisherID</td>
                    <td><strong>@publisher.PublisherName</strong></td>
                    <td>@(publisher.Address ?? "-")</td>
                    <td>@(publisher.Email ?? "-")</td>
                    <td>@(publisher.Phone ?? "-")</td>
                    <td>
                        <span class="badge bg-info">@(publisher.Books?.Count ?? 0)</span>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@publisher.PublisherID" class="btn btn-sm btn-info">Chi tiết</a>
                        <a asp-action="Edit" asp-route-id="@publisher.PublisherID" class="btn btn-sm btn-warning">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@publisher.PublisherID" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

