@model SchoolLibrary.Web.Models.Author
@{
    ViewData["Title"] = "Chi tiết Tác giả";
}

<h2>Chi tiết Tác giả</h2>

<div class="row">
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">ID:</dt>
            <dd class="col-sm-9">@Model.AuthorID</dd>

            <dt class="col-sm-3">Tên tác giả:</dt>
            <dd class="col-sm-9"><strong>@Model.AuthorName</strong></dd>

            <dt class="col-sm-3">Quốc tịch:</dt>
            <dd class="col-sm-9">@(Model.Nationality ?? "-")</dd>

            <dt class="col-sm-3">Ngày sinh:</dt>
            <dd class="col-sm-9">@(Model.BirthDate?.ToString("dd/MM/yyyy") ?? "-")</dd>

            <dt class="col-sm-3">Tiểu sử:</dt>
            <dd class="col-sm-9">@(Model.Biography ?? "-")</dd>

            <dt class="col-sm-3">Mô tả:</dt>
            <dd class="col-sm-9">@(Model.Description ?? "-")</dd>

            <dt class="col-sm-3">Số sách:</dt>
            <dd class="col-sm-9">
                <span class="badge bg-info">@(Model.BookAuthors?.Count ?? 0) cuốn</span>
            </dd>
        </dl>

        @if (Model.BookAuthors != null && Model.BookAuthors.Any())
        {
            <h4 class="mt-4">Danh sách sách:</h4>
            <ul>
                @foreach (var bookAuthor in Model.BookAuthors)
                {
                    <li>@bookAuthor.Book?.Title</li>
                }
            </ul>
        }

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.AuthorID" class="btn btn-warning">Sửa</a>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </div>
</div>

