@model SchoolLibrary.Web.Models.Book
@{
    ViewData["Title"] = "Thêm Sách";
}

<div class="content-box">
    <h2>Thêm Sách mới</h2>

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Tên sách *</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ISBN" class="form-label">ISBN</label>
                    <input asp-for="ISBN" class="form-control" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PublisherID" class="form-label">Nhà xuất bản</label>
                    <select asp-for="PublisherID" asp-items="ViewBag.Publishers" class="form-control">
                        <option value="">-- Chọn nhà xuất bản --</option>
                    </select>
                    <span asp-validation-for="PublisherID" class="text-danger"></span>
                    <small class="text-muted">Hoặc <a asp-controller="Publisher" asp-action="Create" target="_blank">thêm nhà xuất bản mới</a></small>
                </div>

                <div class="mb-3">
                    <label class="form-label">Tác giả <span class="text-muted">(có thể chọn nhiều)</span></label>
                    <div class="border rounded p-3" style="max-height: 200px; overflow-y: auto;">
                        @if (ViewBag.Authors != null)
                        {
                            @foreach (var author in (List<SchoolLibrary.Web.Models.Author>)ViewBag.Authors)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="selectedAuthorIds" value="@author.AuthorID" id="author_@author.AuthorID" />
                                    <label class="form-check-label" for="author_@author.AuthorID">
                                        @author.AuthorName
                                        @if (!string.IsNullOrEmpty(author.Nationality))
                                        {
                                            <small class="text-muted">(@author.Nationality)</small>
                                        }
                                    </label>
                                </div>
                            }
                        }
                        @if (ViewBag.Authors == null || ((List<SchoolLibrary.Web.Models.Author>)ViewBag.Authors).Count == 0)
                        {
                            <p class="text-muted">Chưa có tác giả nào. <a asp-controller="Author" asp-action="Create" target="_blank">Thêm tác giả mới</a></p>
                        }
                    </div>
                    <small class="text-muted">Có thể chọn nhiều tác giả cho một cuốn sách</small>
                </div>

                <div class="mb-3">
                    <label asp-for="PublishYear" class="form-label">Năm xuất bản</label>
                    <input asp-for="PublishYear" type="number" class="form-control" />
                    <span asp-validation-for="PublishYear" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CategoryID" class="form-label">Danh mục</label>
                    <select asp-for="CategoryID" asp-items="ViewBag.Categories" class="form-control">
                        <option value="">-- Chọn danh mục --</option>
                    </select>
                    <span asp-validation-for="CategoryID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="numberOfCopies" class="form-label">Số bản sao</label>
                    <input type="number" name="numberOfCopies" id="numberOfCopies" class="form-control" value="1" min="1" />
                    <small class="text-muted">Số lượng bản sao vật lý của sách này</small>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-success">Thêm</button>
                    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

